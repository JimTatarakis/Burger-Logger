<div class="container">
    {{!-- Burgers Not Eaten --}}
    <div class="row">
        <div class="col s12 m6">
            <a class="waves-effect waves-light white-text blue-grey darken-1 btn-large">Burgers not eaten</a>
            <div class="collection">
                {{#each burger}}
                {{#unless eaten}}
                <a class="collection-item" data-id="{{this.id}}">{{this.name}}</a>
                {{/unless}}
                {{/each}}
            </div>
            <a class="waves-effect waves-light btn modal-trigger blue-grey darken-1" id="eat-btn">Eat the
                burgers!</a>
        </div>

        {{!-- Burgers Eaten --}}
        <div class="col s12 m6">
            <a class="waves-effect waves-light white-text blue-grey darken-1 btn-large">Burgers eaten</a>
            <div class="collection">
                {{#each burger}}
                {{#if eaten}}
                <a class="collection-item" data-id="{{this.id}}">{{this.name}}</a>
                {{/if}}
                {{/each}}
            </div>
            <a class="waves-effect waves-light btn modal-trigger blue-grey darken-1" id="clear-btn">Clear the Plate!</a>
        </div>
    </div>
</div>